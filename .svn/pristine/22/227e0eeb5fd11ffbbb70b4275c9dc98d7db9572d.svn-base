    public Pessoa getPessoaSelecionado() throws Exception {
        if (jTbClientes.getSelectedRow() == -1) {
            throw new Exception("NÃ£o  foi  selecioando nenhuma Pessoa! ");
        }
        return ((PessoaTableModel) jTbClientes.getModel()).getValorPessoa(jTbClientes.getSelectedRow());
        
    }

